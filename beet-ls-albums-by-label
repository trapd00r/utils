#!/bin/sh
# vim:ft=sh:
# abstract: list albums by artist and show record label, helper for
# https://www.japh.se/2021/05/23/custom-beet-path-rules-for-record-labels.html

beet ls "$@"  -f '路$label路 $path' \
  | dirnamep                      \
  | sort -u                       \
  | ls_color --ifs 路 -k3          \
  | perl -pe 's/路//g'
