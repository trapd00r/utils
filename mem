# elif vm_accuracy == 1:
#     sys.stderr.write(
#         "Warning: Shared memory is slightly over-estimated by this system\n"
#         "for each program, so totals are not reported.\n"
#     )


def ram_installed_human():
    return human(ram_installed, power="Ki")

# print ram installedable in human readable format
print(f"RAM installed: {ram_installed_human()}")

